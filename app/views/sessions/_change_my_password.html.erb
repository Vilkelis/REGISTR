<!-- ОКНО СМЕНЫ ПАРОЛЯ ПОЛЬЗОВАТЕЛЯ -->
<div class="modal" id="changemypasswordform" style="display: none">
  <div class="modal-header">
    <button class="close" OnClick="cancelChangeMyPasswordForm();">×</button>
    <h3 id="changemypasswordformtitle">Смена пароля: <span display="inline"  size=1 id="changemypassword_username">Пользователь</span> </h3>
  </div>
  <div class="modal-body">

		  <form class="form-horizontal no-margin">
				<fieldset>

                  <div class="control-group">

                    <label class="control-label" for="my_old_password_val">Старый пароль</label>
                    <div class="controls" >

                        <span class="def none">*</span>
                        <input type="password" class="input-large def-field-input" id="my_old_password_val" maxlength="60" >

                    </div>
                  </div>


                   <div class="control-group">

                     <label class="control-label" for="my_password_val">Новый пароль</label>
                     <div class="controls" >

                         <span class="def none">*</span>
                         <input type="password" class="input-large def-field-input" id="my_password_val" maxlength="60" >

                     </div>
                   </div>

                   <div class="control-group">

                     <label class="control-label" for="my_password_confirmation_val">Подтверждение нового пароля</label>
                     <div class="controls" >

                         <span class="def none">*</span>
                         <input type="password" class="input-large def-field-input" id="my_password_confirmation_val" maxlength="60" >

                     </div>
                   </div>


				</fieldset>
		   </form>
		  </div>
  <div class="modal-footer" >

    <a href="#" class="btn btn-primary" OnClick="okChangeMyPasswordForm();" >OK</a>
    <a href="#" class="btn" OnClick="cancelChangeMyPasswordForm();" >Отмена</a>

  </div>
</div>
